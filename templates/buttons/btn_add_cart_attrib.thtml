{# begin {templatelocation} #}
{!if form_url}
<form id="add_cart_{item_number}" style="display:inline;" action="{action_url}" method="post"
  class="uk-form">
{!endif}
  <input type="hidden" name="item_name" value="{item_name}" />
  <input type="hidden" name="item_number" value="{item_number}" />
  <input type="hidden" name="short_dscp" value="{short_description}" />
  <input type="hidden" name="item_type" value='{item_type}' />
  <input type="hidden" name="amount" value="{amount}" />
  <input type="hidden" name="custom" value='{custom}' />
  <input type="hidden" name="base_price" value="{amount}" />
  <input type="hidden" name="nonce" value='{nonce}' />
{!if unique}
  <input type="hidden" name="unique" value="{unique}" />
{!endif}
  <div class="uk-form-row frmAddCart {tpl_ver}">
    <div>
{!if quantity}
      <input type="hidden" name="quantity" value="{quantity}" />
      {$LANG_SHOP['qty']}: {quantity}
{!else}
      <input name="quantity" type="number" min="{min_ord_qty}"
{!if max_ord_qty}
        max="{max_ord_qty}"
{!endif}
        value="{min_ord_qty}" style="width:80px;"/>
{!endif}
      &nbsp;&nbsp;<button type="submit" class="shopButton orange"
        onclick='shopAddToCart("add_cart_{item_number}");return false;'>
        <i class="uk-icon uk-icon-shopping-cart">&nbsp;</i>{$LANG_SHOP['add_to_cart']}
      </button>
    </div>
  </div>
{!if form_url}
</form>
{!endif}
{# end {templatelocation} #}
